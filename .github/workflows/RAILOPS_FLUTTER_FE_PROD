name: RAILOPS_FLUTTER_FE_PROD

on:
  push:
    branches:
      - main
  schedule:
    - cron: "*/10 * * * *"
    
jobs:
  pull-push:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout source repository
        run: |
          git clone https://sarva-suvidhaen:${{ secrets.PERSONAL_TOKEN  }}@github.com/s2pl/Sanchalak_FE.git

      - name: Add source repository as upstream
        env:
          GITHUB_TOKEN: ${{ secrets.PERSONAL_TOKEN }}
        run: |
          cd Sanchalak_FE
          git remote add upstream https://sarva-suvidhaen:${{ secrets.PERSONAL_TOKEN  }}@github.com/sarva-suvidhaen/Sanchalak_FE.git

      - name: Push to destination repository
        run: |
          cd RailSathiFEUAT
          git config --global user.email "action@github.com"
          git config --global user.name "GitHub Action"
          git push -f upstream main

      

          
